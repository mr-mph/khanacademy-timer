{
  "manifest_version": 3,
  "name": "khantimer",
  "description": "adds a timer to khan academy",
  "version": "1.0",
  "web_accessible_resources": [
    {
      "resources": ["timer.html", "timer.js"],
      "matches": ["https://*.khanacademy.org/*"]
    }
  ],

  "content_scripts": [
    {
      "matches": ["https://*.khanacademy.org/*"],
      "js": ["script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
